{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--port",
        "3000",
        "--headless",
        "--viewport-size",
        "1280,720",
        "--browser",
        "chromium",
        "--output-dir",
        "./playwright-output",
        "--save-session",
        "--save-trace"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}
