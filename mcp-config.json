{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--port",
        "3000",
        "--headless",
        "--viewport-size",
        "1280,720",
        "--browser",
        "chromium",
        "--output-dir",
        "./playwright-output",
        "--save-session",
        "--save-trace"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "tools": {
    "playwright": {
      "description": "Playwright MCP server for browser automation and testing",
      "version": "1.0.0",
      "author": "Playwright Team",
      "repository": "https://github.com/microsoft/playwright",
      "license": "Apache-2.0"
    }
  },
  "settings": {
    "defaultBrowser": "chromium",
    "defaultViewport": {
      "width": 1280,
      "height": 720
    },
    "headless": true,
    "outputDirectory": "./playwright-output",
    "saveSession": true,
    "saveTrace": true
  }
} 