{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--port",
        "3000",
        "--headless",
        "--viewport-size",
        "1280,720",
        "--browser",
        "chromium",
        "--output-dir",
        "./playwright-output",
        "--save-session",
        "--save-trace"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "tools": {
    "playwright": {
      "name": "playwright",
      "description": "Playwright MCP server for browser automation and testing",
      "version": "1.0.0",
      "capabilities": [
        "browser_automation",
        "screenshot_capture",
        "page_interaction",
        "mobile_testing",
        "cross_browser_testing"
      ]
    }
  }
}
